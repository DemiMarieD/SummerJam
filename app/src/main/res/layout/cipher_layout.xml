<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/Ceasar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:text="Cipher"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/cipher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Ceasar"
        android:layout_below="@+id/Ceasar"
        android:layout_marginTop="51dp"
        android:text="Cipher" />

    <EditText
        android:id="@+id/inputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/cipher"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="75dp"
        android:contentDescription="Enter The Text Here"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/inputText"
        android:layout_below="@+id/inputText"
        android:layout_marginTop="34dp"
        android:contentDescription="Enter The Key"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout>